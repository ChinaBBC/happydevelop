<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zx.haijixing">

    <permission
        android:name="com.zx.haijixing.permission.JPUSH_MESSAGE"
        android:protectionLevel="signature" />
    <!-- 打电话 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- 允许程序打开网络套接字 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 允许程序设置内置sd卡的读权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 允许程序设置内置sd卡的写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许程序获取网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 允许程序访问WiFi网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许程序点亮屏幕 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 允许程序读取手机状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 允许程序震动 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 允许程序访问CellID或WiFi热点来获取粗略的位置 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 用于申请调用A-GPS模块 -->
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <!-- 安装应用 -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <!-- 相机 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.usb.host"
        android:required="true" />

    <uses-permission android:name="com.zx.haijixing.permission.JPUSH_MESSAGE" />
    <uses-permission android:name="android.permission.RECEIVE_USER_PRESENT" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:name=".HaiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:theme">
        <activity android:name=".driver.activity.NewsActivity" />
        <activity
            android:name=".share.pub.activity.LaunchActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppStartLoad">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.activity.LoginActivity" />
        <activity android:name=".driver.activity.DriverActivity" />
        <activity android:name=".logistics.LogisticsActivity" />
        <activity android:name=".manager.ManagerActivity" />
        <activity android:name=".login.activity.ForgetActivity" />
        <activity android:name=".login.activity.BaseInfoActivity" />
        <activity android:name=".login.activity.CarInfoActivity" />
        <activity android:name=".login.activity.CheckingActivity" />
        <activity android:name=".driver.activity.NotifyActivity" />
        <activity android:name=".driver.activity.ServicesActivity" />
        <activity android:name=".driver.activity.SearchActivity" />
        <activity android:name=".driver.activity.OrderDetailActivity" />
        <activity android:name=".driver.activity.OrderActivity" />
        <activity android:name=".driver.activity.PrintActivity" />
        <activity android:name=".driver.activity.SetActivity" />
        <activity android:name=".driver.activity.VersionActivity" />
        <activity android:name=".driver.activity.EvaluateActivity" />
        <activity android:name=".driver.activity.LinesActivity" />
        <activity android:name=".driver.activity.StatisticsActivity" />
        <activity android:name=".driver.activity.ChangeActivity" />
        <activity android:name=".login.activity.TruckActivity" />
        <activity android:name=".driver.activity.PhoneActivity" />
        <activity android:name=".driver.activity.PasswordActivity" />
        <activity android:name=".driver.activity.VehicleActivity" />
        <activity android:name=".driver.activity.TruckChangeActivity" />
        <activity android:name=".driver.activity.PapersActivity" />
        <activity android:name=".driver.activity.PapersChangeActivity" />
        <activity android:name=".share.pub.activity.ApkActivity" />
        <!-- 下载apk -->
        <provider
            android:name=".util.UpdateApkFileProvider"
            android:authorities="${applicationId}.update.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/update_apk_paths" />
        </provider>

        <!-- 这个是自定义Service，要继承极光JCommonService，可以在更多手机平台上使得推送通道保持的更稳定 -->
        <service
            android:name=".share.service.HaiCommonService"
            android:enabled="true"
            android:exported="false"
            android:process=":pushcore">
            <intent-filter>
                <action android:name="cn.jiguang.user.service.action" />
            </intent-filter>
        </service>

        <!-- 该广播需要继承 JPush 提供的 JPushMessageReceiver 类, 并如下新增一个 Intent-Filter -->
        <receiver
            android:name=".share.service.HaiPushReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="cn.jpush.android.intent.RECEIVE_MESSAGE" />

                <category android:name="com.zx.haijixing" />
            </intent-filter>
        </receiver>

        <activity android:name=".logistics.activity.ClaManageActivity" />
        <activity android:name=".logistics.activity.FeeActivity" />
        <activity android:name=".logistics.activity.RunTableActivity" />
        <activity android:name=".logistics.activity.DriverWordsActivity" />
        <activity android:name=".logistics.activity.FeeStatisticsActivity" />
        <activity android:name=".logistics.activity.AllotActivity" />
        <activity android:name=".logistics.activity.CheckLogisticsActivity"></activity>
    </application>

</manifest>