<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".login.activity.LoginActivity">
    <ImageView
        android:id="@+id/login_title_bg"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:src="@mipmap/login_title_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/login_pass_image"
        android:layout_width="@dimen/dp_19"
        android:layout_height="@dimen/dp_10"
        android:src="@mipmap/password_login_bot"
        app:layout_constraintTop_toBottomOf="@id/login_title_bg"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_90"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/login_code_image"
        android:layout_width="@dimen/dp_19"
        android:layout_height="@dimen/dp_10"
        android:src="@mipmap/code_login_bot"
        app:layout_constraintTop_toBottomOf="@id/login_title_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_90"
        />
    <TextView
        android:id="@+id/login_password_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password_login"
        android:textColor="@color/color_9999"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@id/login_title_bg"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_71"
        android:layout_marginTop="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/login_code_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/code_login"
        android:textColor="@color/color_3333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@id/login_title_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_65"
        android:layout_marginTop="@dimen/dp_20"
        />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/login_password_login_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_password_login"
        android:layout_marginTop="@dimen/dp_20"
        android:visibility="gone"
        >
        <LinearLayout
            android:id="@+id/login_name_area"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_58"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/user_name"
                />
            <EditText
                android:id="@+id/login_user_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_40"
                android:background="@null"
                android:hint="@string/phone_or_name"
                android:textColorHint="@color/color_cccc"
                android:textSize="@dimen/sp_16"
                android:paddingLeft="@dimen/dp_8"
                android:inputType="text"
                android:maxLength="11"
                />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_e0e0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_name_area"
            app:layout_constraintWidth_percent="0.8"
            />
        <LinearLayout
            android:id="@+id/login_password_area"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_58"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_name_area"
            app:layout_constraintWidth_percent="0.8"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/user_password"
                />
            <EditText
                android:id="@+id/login_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_40"
                android:background="@null"
                android:hint="@string/password"
                android:textColorHint="@color/color_cccc"
                android:textSize="@dimen/sp_16"
                android:paddingLeft="@dimen/dp_8"
                android:inputType="textPassword"
                android:maxLength="16"
                />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_e0e0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_password_area"
            app:layout_constraintWidth_percent="0.8"
            />
        <TextView
            android:id="@+id/login_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forget_password"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_9999"
            app:layout_constraintTop_toBottomOf="@id/login_password_area"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_14"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/login_code_login_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_code_login"
        android:layout_marginTop="@dimen/dp_20"
        >
        <LinearLayout
            android:id="@+id/login_phone_area"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_58"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_15"
            >
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/user_phone"
                />
            <EditText
                android:id="@+id/login_phone_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_40"
                android:background="@null"
                android:hint="@string/phone"
                android:textColorHint="@color/color_cccc"
                android:textSize="@dimen/sp_16"
                android:paddingLeft="@dimen/dp_8"
                android:inputType="text"
                android:maxLength="11"
                />
            <TextView
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_14"
                android:background="@color/color_3333"
                />
            <TextView
                android:id="@+id/login_phone_send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_user_code"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_3333"
                android:layout_marginLeft="@dimen/dp_10"
                />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_e0e0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_phone_area"
            app:layout_constraintWidth_percent="0.8"
            />
        <LinearLayout
            android:id="@+id/login_code_area"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_58"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_phone_area"
            app:layout_constraintWidth_percent="0.8"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/user_code"
                />
            <EditText
                android:id="@+id/login_code_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_40"
                android:background="@null"
                android:hint="@string/code"
                android:textColorHint="@color/color_cccc"
                android:textSize="@dimen/sp_16"
                android:paddingLeft="@dimen/dp_8"
                android:inputType="number"
                android:maxLength="6"
                />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_e0e0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_code_area"
            app:layout_constraintWidth_percent="0.8"
            />
    </android.support.constraint.ConstraintLayout>
    <Button
        android:id="@+id/login_login"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_44"
        android:text="@string/login"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_password_login"
        android:layout_marginTop="@dimen/dp_230"
        android:background="@drawable/shape_5dp_703f"
        />
    <TextView
        android:id="@+id/login_no_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_account"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_9999"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/login_go_register"
        app:layout_constraintTop_toBottomOf="@id/login_login"
        android:layout_marginTop="@dimen/dp_16"
        />
    <TextView
        android:id="@+id/login_go_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_register"
        android:textColor="@color/color_703f"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toRightOf="@id/login_no_account"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_login"
        android:layout_marginTop="@dimen/dp_16"
        />
</android.support.constraint.ConstraintLayout>