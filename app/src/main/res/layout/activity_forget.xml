<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".login.activity.ForgetActivity">


    <ImageView
        android:id="@+id/forget_title_bg"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:src="@mipmap/login_title_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/forget_back"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/back_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/forget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_password"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <LinearLayout
        android:id="@+id/forget_name_area"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_58"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_title_bg"
        app:layout_constraintWidth_percent="0.8"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_15"
        >
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/user_phone"
            />
        <EditText
            android:id="@+id/forget_user_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:background="@null"
            android:hint="@string/phone"
            android:textColorHint="@color/color_cccc"
            android:textSize="@dimen/sp_16"
            android:paddingLeft="@dimen/dp_8"
            android:inputType="text"
            android:maxLength="11"
            />
        <TextView
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_14"
            android:background="@color/color_3333"
            />
        <TextView
            android:id="@+id/forget_send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_user_code"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_3333"
            android:layout_marginLeft="@dimen/dp_10"
            />
    </LinearLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_e0e0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_name_area"
        app:layout_constraintWidth_percent="0.8"
        />
    <LinearLayout
        android:id="@+id/forget_code_area"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_58"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_name_area"
        app:layout_constraintWidth_percent="0.8"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/user_code"
            />
        <EditText
            android:id="@+id/forget_user_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:background="@null"
            android:hint="@string/code"
            android:textColorHint="@color/color_cccc"
            android:textSize="@dimen/sp_16"
            android:paddingLeft="@dimen/dp_8"
            android:inputType="number"
            android:maxLength="6"
            />
    </LinearLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_e0e0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_code_area"
        app:layout_constraintWidth_percent="0.8"
        />
    <LinearLayout
        android:id="@+id/forget_password_area"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_58"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_code_area"
        app:layout_constraintWidth_percent="0.8"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/user_password"
            />
        <EditText
            android:id="@+id/forget_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:background="@null"
            android:hint="@string/password"
            android:textColorHint="@color/color_cccc"
            android:textSize="@dimen/sp_16"
            android:paddingLeft="@dimen/dp_8"
            android:inputType="textPassword"
            android:maxLength="16"
            />
    </LinearLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_e0e0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_password_area"
        app:layout_constraintWidth_percent="0.8"
        />
    <LinearLayout
        android:id="@+id/forget_sure_pass_area"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_58"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_password_area"
        app:layout_constraintWidth_percent="0.8"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/user_password"
            />
        <EditText
            android:id="@+id/forget_sure_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:background="@null"
            android:hint="@string/sure_password"
            android:textColorHint="@color/color_cccc"
            android:textSize="@dimen/sp_16"
            android:paddingLeft="@dimen/dp_8"
            android:inputType="textPassword"
            android:maxLength="16"
            />
    </LinearLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_e0e0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_sure_pass_area"
        app:layout_constraintWidth_percent="0.8"
        />
    <Button
        android:id="@+id/forget_sure"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_44"
        android:text="@string/sure"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_sure_pass_area"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/shape_5dp_703f"
        />
</android.support.constraint.ConstraintLayout>