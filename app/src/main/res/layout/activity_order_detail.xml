                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12535234231"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_3333"
                app:layout_constraintLeft_toRightOf="@id/order_detail_img6"
                app:layout_constraintTop_toBottomOf="@id/order_detail_number"
