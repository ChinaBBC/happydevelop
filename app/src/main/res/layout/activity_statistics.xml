<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".driver.activity.StatisticsActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/statistics_bg"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_190"
            android:src="@mipmap/statistics_bg"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/statistics_back"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/back_white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <ImageView
            android:id="@+id/statistics_user_head"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:src="@mipmap/user_head"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_34"
            />
        <TextView
            android:id="@+id/statistics_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘伯温"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:layout_constraintLeft_toRightOf="@id/statistics_user_head"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_78"
            />
        <TextView
            android:id="@+id/statistics_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1328323283"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:layout_constraintLeft_toRightOf="@id/statistics_user_head"
            app:layout_constraintTop_toBottomOf="@id/statistics_user_name"
            android:layout_marginTop="@dimen/dp_5"
            />
        <android.support.constraint.ConstraintLayout
            android:id="@+id/statistics_lay1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_65"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_175"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/shape_2dp_59ff"
            android:padding="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/statistics_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="50单"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_703f"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/statistics_day"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/statistics_word1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/this_month"
                android:textColor="@color/color_6666"
                android:textSize="@dimen/sp_10"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintTop_toBottomOf="@id/statistics_month"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/statistics_word2"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/statistics_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3单"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_703f"
                app:layout_constraintLeft_toRightOf="@id/statistics_month"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/statistics_other"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/statistics_word2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/this_day"
                android:textColor="@color/color_6666"
                android:textSize="@dimen/sp_10"
                app:layout_constraintTop_toBottomOf="@id/statistics_day"
                app:layout_constraintLeft_toRightOf="@id/statistics_word1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/statistics_word3"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/statistics_other"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="300元"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_703f"
                app:layout_constraintLeft_toRightOf="@id/statistics_day"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/statistics_word3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/this_other_month"
                android:textColor="@color/color_6666"
                android:textSize="@dimen/sp_10"
                app:layout_constraintTop_toBottomOf="@id/statistics_day"
                app:layout_constraintLeft_toRightOf="@id/statistics_word2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                />
        </android.support.constraint.ConstraintLayout>
        <TextView
            android:id="@+id/statistics_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bill_statistics"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_703f"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/statistics_lay1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/statistics_free"
            android:layout_marginTop="@dimen/dp_25"
            />
        <TextView
            android:id="@+id/statistics_line1"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_703f"
            app:layout_constraintTop_toBottomOf="@id/statistics_bill"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/statistics_line2"
            android:layout_marginTop="@dimen/dp_5"
            />
        <TextView
            android:id="@+id/statistics_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/free_statistics"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_6666"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/statistics_lay1"
            app:layout_constraintLeft_toRightOf="@id/statistics_bill"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_25"
            />
        <TextView
            android:id="@+id/statistics_line2"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_703f"
            app:layout_constraintTop_toBottomOf="@id/statistics_free"
            app:layout_constraintLeft_toRightOf="@id/statistics_line1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_5"
            android:visibility="invisible"
            />

        <LinearLayout
            android:id="@+id/statistics_start_time_area"
            android:layout_width="@dimen/dp_116"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/statistics_line2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/statistics_word5"
            android:layout_marginTop="@dimen/dp_22"
            android:background="@drawable/shape_5dp_59ff"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/statistics_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-07-09"
                android:textColor="@color/color_6666"
                android:textSize="@dimen/sp_14"
                />
            <ImageView
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_5"
                android:src="@mipmap/arrows_down"
                android:layout_marginLeft="@dimen/dp_8"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/statistics_word5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_3333"
            app:layout_constraintTop_toBottomOf="@id/statistics_line2"
            app:layout_constraintLeft_toRightOf="@id/statistics_start_time_area"
            app:layout_constraintRight_toLeftOf="@id/statistics_end_time_area"
            android:layout_marginTop="@dimen/dp_28"
            />
        <LinearLayout
            android:id="@+id/statistics_end_time_area"
            android:layout_width="@dimen/dp_116"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/statistics_line2"
            app:layout_constraintLeft_toRightOf="@id/statistics_word5"
            app:layout_constraintRight_toLeftOf="@id/statistics_search"
            android:layout_marginTop="@dimen/dp_22"
            android:background="@drawable/shape_5dp_59ff"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/statistics_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-07-09"
                android:textColor="@color/color_6666"
                android:textSize="@dimen/sp_14"
                />
            <ImageView
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_5"
                android:src="@mipmap/arrows_down"
                android:layout_marginLeft="@dimen/dp_8"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/statistics_search"
            android:layout_width="@dimen/dp_76"
            android:layout_height="@dimen/dp_30"
            android:text="@string/search"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statistics_line2"
            android:background="@drawable/shape_5dp_703f"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_12"
            />
        <TextView
            android:id="@+id/statistics_word4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_all"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_3333"
            app:layout_constraintTop_toBottomOf="@id/statistics_search"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/statistics_add_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1224单"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_703f"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/statistics_word4"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_5"
            />
        <com.zx.haijixing.custom.CustomGraphViewT
            android:id="@+id/statistics_map"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_250"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statistics_add_all"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_30"
            />
    </android.support.constraint.ConstraintLayout>
</ScrollView>