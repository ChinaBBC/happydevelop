<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.96"
        android:background="@drawable/shape_5dp_ffff"
        >
        <TextView
            android:id="@+id/notify_center_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您有新的订单，请确认接单"
            android:textColor="@color/color_4444"
            android:textSize="@dimen/sp_15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/notify_center_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海鲜X12件"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_6666"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/notify_center_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运单号：12268236836"
            android:textColor="@color/color_6666"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toBottomOf="@id/notify_center_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/notify_center_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成都双流→绵阳涪城"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_3535"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notify_center_number"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>