<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/dp_12"
    android:layout_marginLeft="@dimen/dp_12"
    android:background="@drawable/shape_2dp_ffff"
    android:padding="@dimen/dp_10">
    <TextView
        android:id="@+id/has_complete_word1"
        android:layout_width="@dimen/dp_48"
        android:layout_height="wrap_content"
        android:text="@string/all_score"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_3333"
        android:gravity="center"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/has_complete_word2"
        />
    <TextView
        android:id="@+id/has_complete_all_score"
        android:layout_width="@dimen/dp_48"
        android:layout_height="wrap_content"
        android:text="4.9分"
        android:textColor="@color/color_7e21"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/has_complete_word1"
        app:layout_constraintRight_toLeftOf="@id/has_complete_service_manner"
        android:layout_marginTop="@dimen/dp_8"
        />
    <TextView
        android:id="@+id/has_complete_word2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_manner"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_3333"
        app:layout_constraintLeft_toRightOf="@id/has_complete_word1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/has_complete_word3"
        />
    <TextView
        android:id="@+id/has_complete_service_manner"
        android:layout_width="@dimen/dp_48"
        android:layout_height="wrap_content"
        android:text="4.9分"
        android:textColor="@color/color_7e21"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/has_complete_all_score"
        app:layout_constraintTop_toBottomOf="@id/has_complete_word2"
        app:layout_constraintRight_toLeftOf="@id/has_complete_arrive_time"
        android:layout_marginTop="@dimen/dp_8"
        />

    <TextView
        android:id="@+id/has_complete_word3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arrive_time"
        android:textColor="@color/color_3333"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@id/has_complete_word2"
        app:layout_constraintRight_toLeftOf="@id/has_complete_word4"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/has_complete_arrive_time"
        android:layout_width="@dimen/dp_48"
        android:layout_height="wrap_content"
        android:text="4.9分"
        android:textColor="@color/color_7e21"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/has_complete_service_manner"
        app:layout_constraintTop_toBottomOf="@id/has_complete_word3"
        app:layout_constraintRight_toLeftOf="@id/has_complete_goods_intact"
        android:layout_marginTop="@dimen/dp_8"
        />
    <TextView
        android:id="@+id/has_complete_word4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goods_intact"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_3333"
        app:layout_constraintLeft_toRightOf="@id/has_complete_word3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/has_complete_goods_intact"
        android:layout_width="@dimen/dp_48"
        android:layout_height="wrap_content"
        android:text="4.9分"
        android:textColor="@color/color_7e21"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/has_complete_arrive_time"
        app:layout_constraintTop_toBottomOf="@id/has_complete_word4"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_8"
        />
    <TextView
        android:id="@+id/has_complete_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="备注：请一定送货到收货人手里！谢谢！"
        android:textColor="@color/color_3333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/has_complete_goods_intact"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/color_f5f1"
        />
</android.support.constraint.ConstraintLayout>