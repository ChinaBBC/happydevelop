<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_30"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/viewstub_change_add"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@mipmap/add"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <EditText
        android:id="@+id/viewstub_change_count"
        android:layout_width="@dimen/dp_60"
        android:layout_height="0dp"
        android:text="0"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_3333"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="4"
        app:layout_constraintRight_toLeftOf="@id/viewstub_change_add"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textCursorDrawable="@drawable/shape_input_cur"
        />
    <ImageView
        android:id="@+id/viewstub_change_subtract"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@mipmap/subtract_can"
        app:layout_constraintRight_toLeftOf="@+id/viewstub_change_count"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/viewstub_change_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大件"
        android:textColor="@color/color_3333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toLeftOf="@id/viewstub_change_subtract"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/dp_13"
        />
</android.support.constraint.ConstraintLayout>