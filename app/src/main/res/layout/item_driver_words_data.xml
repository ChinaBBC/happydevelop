<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_2dp_59ff"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/driver_words_data_head"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_24"
        android:src="@mipmap/user_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/driver_words_data_name"
        android:layout_width="@dimen/dp_48"
        android:layout_height="wrap_content"
        android:text="李世民"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_3333"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/driver_words_data_head"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_6"
        />
    <TextView
        android:id="@+id/driver_words_data_word1"
        android:layout_width="@dimen/dp_48"
        android:layout_height="wrap_content"
        android:text="@string/all_score"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_3333"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/driver_words_data_head"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/driver_words_data_all_score"
        app:layout_constraintRight_toLeftOf="@id/driver_words_data_word2"
        />
    <TextView
        android:id="@+id/driver_words_data_all_score"
        android:layout_width="@dimen/dp_48"
        android:layout_height="wrap_content"
        android:text="4.9分"
        android:textColor="@color/color_7e21"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/driver_words_data_name"
        app:layout_constraintTop_toBottomOf="@id/driver_words_data_word1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/driver_words_data_service_manner"
        />
    <TextView
        android:id="@+id/driver_words_data_word2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_manner"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_3333"
        app:layout_constraintLeft_toRightOf="@id/driver_words_data_word1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/driver_words_data_all_score"
        app:layout_constraintRight_toLeftOf="@id/driver_words_data_word3"
        />
    <TextView
        android:id="@+id/driver_words_data_service_manner"
        android:layout_width="@dimen/dp_48"
        android:layout_height="wrap_content"
        android:text="4.9分"
        android:textColor="@color/color_7e21"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/driver_words_data_all_score"
        app:layout_constraintTop_toBottomOf="@id/driver_words_data_word2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/driver_words_data_arrive_time"
        />
    <TextView
        android:id="@+id/driver_words_data_word3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arrive_time"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_3333"
        app:layout_constraintLeft_toRightOf="@id/driver_words_data_word2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/driver_words_data_arrive_time"
        app:layout_constraintRight_toLeftOf="@id/driver_words_data_word4"
        />
    <TextView
        android:id="@+id/driver_words_data_arrive_time"
        android:layout_width="@dimen/dp_48"
        android:layout_height="wrap_content"
        android:text="4.9分"
        android:textColor="@color/color_7e21"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/driver_words_data_service_manner"
        app:layout_constraintTop_toBottomOf="@id/driver_words_data_word3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/driver_words_data_goods_intact"
        />
    <TextView
        android:id="@+id/driver_words_data_word4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goods_intact"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_3333"
        app:layout_constraintLeft_toRightOf="@id/driver_words_data_word3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/driver_words_data_goods_intact"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/driver_words_data_goods_intact"
        android:layout_width="@dimen/dp_48"
        android:layout_height="wrap_content"
        android:text="4.9分"
        android:textColor="@color/color_7e21"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/driver_words_data_arrive_time"
        app:layout_constraintTop_toBottomOf="@id/driver_words_data_word4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</android.support.constraint.ConstraintLayout>