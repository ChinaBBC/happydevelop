<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_5dp_59ff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/dp_12"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_10"
    android:id="@+id/index_body_item"
    >

    <View
        android:id="@+id/index_a"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_120"
        android:background="@color/color_9999"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <View
        android:id="@+id/index_b"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:background="@color/color_9999"
        app:layout_constraintTop_toBottomOf="@id/index_a"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        />
    <View
        android:id="@+id/index_c"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_20"
        android:background="@color/color_9999"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/index_b"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        />

</android.support.constraint.ConstraintLayout>