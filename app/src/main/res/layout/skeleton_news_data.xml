<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_2dp_59ff"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    android:padding="@dimen/dp_10"
    android:id="@+id/new_data_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/news_a"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_60"
        android:background="@color/color_9999"
        />
    <TextView
        android:id="@+id/news_b"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_20"
        android:background="@color/color_9999"
        app:layout_constraintLeft_toRightOf="@id/news_a"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/news_c"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:background="@color/color_9999"
        app:layout_constraintLeft_toRightOf="@id/news_a"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/news_b"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        />
    <View
        android:id="@+id/news_d"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_20"
        android:background="@color/color_9999"
        app:layout_constraintTop_toBottomOf="@id/news_c"
        app:layout_constraintLeft_toRightOf="@id/news_a"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        />
    <View
        android:id="@+id/new_e"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:background="@color/color_9999"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/news_c"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        />

</android.support.constraint.ConstraintLayout>