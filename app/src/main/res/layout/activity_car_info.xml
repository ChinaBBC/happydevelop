<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".login.activity.CarInfoActivity">

    <include
        android:id="@+id/car_info_bar"
        layout="@layout/a_common_title"></include>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/car_info_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="none"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/car_info_con1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_97"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@mipmap/register_title_bg"
                app:layout_constraintWidth_percent="0.96"
                >
                <ImageView
                    android:id="@+id/car_info_bot1"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/register_title_bg_in"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/car_info_line1"
                    />
                <TextView
                    android:id="@+id/car_info_str1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/base_info"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintTop_toBottomOf="@id/car_info_bot1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="@dimen/dp_22"
                    />
                <TextView
                    android:id="@+id/car_info_line1"
                    android:layout_width="@dimen/dp_106"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/white"
                    app:layout_constraintLeft_toRightOf="@id/car_info_bot1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/car_info_bot2"
                    />
                <ImageView
                    android:id="@+id/car_info_bot2"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/register_title_bg_in"
                    app:layout_constraintLeft_toRightOf="@id/car_info_line1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/car_info_line2"
                    />
                <TextView
                    android:id="@+id/car_info_str2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/car_info"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintTop_toBottomOf="@id/car_info_bot2"
                    app:layout_constraintLeft_toRightOf="@id/car_info_str1"
                    app:layout_constraintRight_toLeftOf="@id/car_info_str3"
                    />
                <TextView
                    android:id="@+id/car_info_line2"
                    android:layout_width="@dimen/dp_106"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/white"
                    app:layout_constraintLeft_toRightOf="@id/car_info_bot2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/car_info_bot3"
                    />
                <ImageView
                    android:id="@+id/car_info_bot3"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/register_title_bg_out"
                    app:layout_constraintLeft_toRightOf="@id/car_info_line2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <TextView
                    android:id="@+id/car_info_str3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/back_check"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintTop_toBottomOf="@id/car_info_bot3"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="@dimen/dp_22"
                    />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/car_info_con2"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_186"
                app:layout_constraintTop_toBottomOf="@id/car_info_con1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="0.9"
                android:layout_marginTop="@dimen/dp_24"
                >
                <ImageView
                    android:id="@+id/car_info_licenseA"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/car_info_up"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <ImageView
                    android:id="@+id/car_info_graphA"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:src="@mipmap/register_graph"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/car_info_wordA"
                    />
                <TextView
                    android:id="@+id/car_info_wordA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/take_licenseA"
                    android:textColor="@color/color_cccc"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintTop_toBottomOf="@id/car_info_graphA"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="@dimen/dp_10"
                    />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/car_info_con3"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_186"
                app:layout_constraintTop_toBottomOf="@id/car_info_con2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="0.9"
                android:layout_marginTop="@dimen/dp_6"
                >
                <ImageView
                    android:id="@+id/car_info_licenseB"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/car_info_up"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <ImageView
                    android:id="@+id/car_info_graphB"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:src="@mipmap/register_graph"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/car_info_wordB"
                    />
                <TextView
                    android:id="@+id/car_info_wordB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/take_licenseB"
                    android:textColor="@color/color_cccc"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintTop_toBottomOf="@id/car_info_graphB"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="@dimen/dp_10"
                    />
            </android.support.constraint.ConstraintLayout>
            <Button
                android:id="@+id/car_info_next"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_44"
                android:text="@string/next_step"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:background="@drawable/shape_5dp_703f"
                app:layout_constraintTop_toBottomOf="@id/car_info_con3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_42"
                />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>