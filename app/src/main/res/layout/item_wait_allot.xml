<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_2dp_59ff"
    android:padding="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/allot_data_item"
        layout="@layout/a_common_orders"
        />
    <Button
        android:id="@+id/allot_data_change_money"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"
        android:text="@string/sure_pay"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:background="@drawable/shape_5dp_a45b"
        app:layout_constraintRight_toLeftOf="@+id/allot_data_change_order"
        app:layout_constraintTop_toBottomOf="@id/allot_data_item"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_6"
        />
    <Button
        android:id="@+id/allot_data_change_order"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"
        android:text="@string/change_order"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:background="@drawable/shape_5dp_a45b"
        app:layout_constraintRight_toLeftOf="@+id/allot_data_sure_allot"
        app:layout_constraintTop_toBottomOf="@id/allot_data_item"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_6"
        />
    <Button
        android:id="@+id/allot_data_sure_allot"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_30"
        android:text="@string/allot"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:background="@drawable/shape_5dp_a45b"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/allot_data_item"
        android:layout_marginTop="@dimen/dp_22"
        />
    <Button
        android:id="@+id/allot_data_print_order"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_30"
        android:text="@string/print_order"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:background="@drawable/shape_5dp_a45b"
        app:layout_constraintRight_toLeftOf="@+id/allot_data_change_money"
        app:layout_constraintTop_toBottomOf="@id/allot_data_item"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_6"
        />
</android.support.constraint.ConstraintLayout>