<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".driver.activity.SearchActivity">
    <ImageView
        android:id="@+id/search_scan_code"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_16"
        />
    <LinearLayout
        android:id="@+id/search_one"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_32"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:focusableInTouchMode="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/search_scan_code"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_12"
        android:background="@drawable/shape_5dp_faf2"
        >
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/search_bar"
            android:layout_marginLeft="@dimen/dp_6"
            />
        <EditText
            android:id="@+id/search_order_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/order_number"
            android:textColorHint="@color/color_9999"
            android:textColor="@color/color_3333"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            />
        <TextView
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_16"
            android:background="@color/color_3333"
            />
        <TextView
            android:id="@+id/search_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:textColor="@color/color_3333"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_rv_data"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_one"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_f5f5"
        android:layout_marginTop="@dimen/dp_10"
        ></android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>