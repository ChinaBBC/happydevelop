<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_2dp_59ff"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">

    <ImageView
        android:id="@+id/cla_manage_sendWay"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_25"
        android:src="@mipmap/city_send"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/cla_manage_endT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05:00"
        android:textColor="@color/color_6c00"
        android:textSize="@dimen/sp_22"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/cla_manage_img1"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_7"
        android:src="@mipmap/arrow_yellow"
        app:layout_constraintRight_toLeftOf="@id/cla_manage_endT"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_6"
        />
    <TextView
        android:id="@+id/cla_manage_startT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05:00"
        android:textColor="@color/color_6c00"
        android:textSize="@dimen/sp_22"
        app:layout_constraintRight_toLeftOf="@id/cla_manage_img1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/dp_6"
        />
    <TextView
        android:id="@+id/cla_manage_totalT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4小时45分"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_6666"
        app:layout_constraintRight_toLeftOf="@id/cla_manage_endT"
        app:layout_constraintTop_toBottomOf="@id/cla_manage_img1"
        android:layout_marginRight="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        />
    <TextView
        android:id="@+id/cla_manage_nameNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张飞 124123213123"
        android:textColor="@color/color_3333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@id/cla_manage_totalT"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/cla_manage_truckNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S342342332"
        android:textColor="@color/color_3333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@id/cla_manage_totalT"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        />
    <TextView
        android:id="@+id/cla_manage_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="备注：请一定送货到收货人手里！谢谢！"
        android:textColor="@color/color_3333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cla_manage_truckNum"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_f5f1"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <LinearLayout
        android:id="@+id/cla_manage_delete"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cla_manage_remark"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_5dp_6d6d"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/delete"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_2"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cla_manage_editor"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        app:layout_constraintRight_toLeftOf="@id/cla_manage_delete"
        app:layout_constraintTop_toBottomOf="@id/cla_manage_remark"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_6"
        android:background="@drawable/shape_5dp_a45b"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/editor"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editor"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_2"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cla_manage_add"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        app:layout_constraintRight_toLeftOf="@id/cla_manage_editor"
        app:layout_constraintTop_toBottomOf="@id/cla_manage_remark"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_5dp_a47f"

        android:layout_marginRight="@dimen/dp_6"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/add_w"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_2"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>