<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".logistics.activity.DriverWordsActivity">
    <ImageView
        android:id="@+id/driver_words_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_180"
        android:src="@mipmap/run_table_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/driver_words_back"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/back_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/driver_words_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/driver_words"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/driver_words_lay1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_96"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/driver_words_title"
        android:layout_marginTop="@dimen/dp_26"
        android:background="@drawable/shape_2dp_59ff"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:padding="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/driver_words_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-08-11"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_3333"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_6"
            />
        <ImageView
            android:id="@+id/driver_words_img1"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@mipmap/arrows_down"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/driver_words_start"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_6"
            />
        <TextView
            android:id="@+id/driver_words_word1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to"
            android:textColor="@color/color_3333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/driver_words_img1"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_6"
            />
        <TextView
            android:id="@+id/driver_words_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-08-11"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_3333"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/driver_words_word1"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_6"
            />
        <ImageView
            android:id="@+id/driver_words_img2"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@mipmap/arrows_down"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/driver_words_end"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_6"
            />
        <EditText
            android:id="@+id/driver_words_input"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_3333"
            android:hint="@string/driver_name"
            android:textColorHint="@color/color_9999"
            android:background="@drawable/shape_3dp_703f"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/driver_words_search"
            app:layout_constraintTop_toBottomOf="@id/driver_words_start"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingRight="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_24"
            android:maxLength="8"
            />
        <Button
            android:id="@+id/driver_words_search"
            android:layout_width="@dimen/dp_76"
            android:layout_height="@dimen/dp_30"
            android:text="@string/search"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/shape_5dp_a45b"
            app:layout_constraintTop_toBottomOf="@id/driver_words_start"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/driver_words_input"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/dp_10"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/driver_words_data"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/driver_words_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_f0f0"
        ></android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>