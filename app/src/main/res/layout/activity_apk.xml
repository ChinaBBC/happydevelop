<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".share.pub.activity.ApkActivity">

    <include
        android:id="@+id/apk_title"
        layout="@layout/a_common_title"/>
    <ImageView
        android:id="@+id/apk_img1"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/apk_title"
        android:layout_marginTop="@dimen/dp_30"
        />
    <TextView
        android:id="@+id/apk_word1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_content"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_3333"
        app:layout_constraintTop_toBottomOf="@id/apk_img1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        />
    <TextView
        android:id="@+id/apk_update_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1.dsodgag"
        android:textColor="@color/color_3333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@id/apk_word1"
        app:layout_constraintLeft_toRightOf="@id/apk_word1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        />
    <Button
        android:id="@+id/apk_update"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_44"
        android:text="@string/update_immediately"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:background="@drawable/shape_5dp_a45b"
        app:layout_constraintTop_toBottomOf="@id/apk_update_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_30"
        />
</android.support.constraint.ConstraintLayout>