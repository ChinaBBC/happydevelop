<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/dp_12"
    android:layout_marginLeft="@dimen/dp_12"
    android:background="@drawable/shape_2dp_ffff"
    android:padding="@dimen/dp_10">
    <TextView
        android:id="@+id/normal_dan_word1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_6666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/normal_dan_wType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="冷冻食品"
        android:textColor="@color/color_3333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/normal_dan_word2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_6666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/normal_dan_word1"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/normal_dan_wWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="44kg"
        android:textColor="@color/color_3333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/normal_dan_wType"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/normal_dan_word3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/freight"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_6666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/normal_dan_word2"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/normal_dan_wFreight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥200(到付)"
        android:textColor="@color/color_3333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/normal_dan_wWeight"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/normal_dan_word4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_6666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/normal_dan_word3"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/normal_dan_wTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10件"
        android:textColor="@color/color_3333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/normal_dan_wFreight"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/normal_dan_total_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(大件x1  中件x2  小件x5)"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_6666"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/normal_dan_wTotal"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/normal_dan_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="备注：请一定送货到收货人手里！谢谢！"
        android:textColor="@color/color_3333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/normal_dan_total_info"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_f5f1"
        />
</android.support.constraint.ConstraintLayout>