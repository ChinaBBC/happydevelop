<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="@dimen/dp_325"
        android:layout_height="@dimen/dp_325"
        android:src="@mipmap/dialog_pay_tip"
        />
    <ImageView
        android:id="@+id/dialog_pay_online"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/select_yes"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_pay_money"
        app:layout_constraintRight_toLeftOf="@id/dialog_pay_online_img"
        android:layout_marginBottom="@dimen/dp_27"
        />
    <TextView
        android:id="@+id/dialog_pay_online_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_online"
        android:textColor="@color/color_703f"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toRightOf="@id/dialog_pay_online"
        app:layout_constraintBottom_toTopOf="@id/dialog_pay_money"
        app:layout_constraintRight_toLeftOf="@id/dialog_pay_crash"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_27"
        />
    <ImageView
        android:id="@+id/dialog_pay_crash"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/select_no"
        app:layout_constraintLeft_toRightOf="@id/dialog_pay_online_img"
        app:layout_constraintBottom_toTopOf="@id/dialog_pay_money"
        app:layout_constraintRight_toLeftOf="@id/dialog_pay_crash_img"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_27"
        />
    <TextView
        android:id="@+id/dialog_pay_crash_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_online"
        android:textColor="@color/color_9999"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toRightOf="@id/dialog_pay_crash"
        app:layout_constraintBottom_toTopOf="@id/dialog_pay_money"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_27"
        />
    <TextView
        android:id="@+id/dialog_pay_word1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/real_pay"
        android:textColor="@color/color_3333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_pay_no"
        app:layout_constraintRight_toLeftOf="@id/dialog_pay_money"
        android:layout_marginBottom="@dimen/dp_25"
        />
    <EditText
        android:id="@+id/dialog_pay_money"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_30"
        android:inputType="number"
        android:maxLength="8"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_3333"
        android:background="@drawable/shape_5dp_e0e0"
        app:layout_constraintLeft_toRightOf="@id/dialog_pay_word1"
        app:layout_constraintBottom_toTopOf="@id/dialog_pay_no"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingRight="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/dialog_pay_no"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_40"
        android:text="@string/cancel"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/shape_right_b87a"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dialog_pay_yes"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/dp_26"
        />
    <TextView
        android:id="@+id/dialog_pay_yes"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_40"
        android:text="@string/sure"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/shape_left_a45b"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dialog_pay_no"
        android:layout_marginBottom="@dimen/dp_26"
        />
</android.support.constraint.ConstraintLayout>