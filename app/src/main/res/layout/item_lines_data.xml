<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    android:padding="@dimen/dp_10"
    android:background="@drawable/shape_2dp_59ff">

    <TextView
        android:id="@+id/lines_data_send_way"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_25"
        android:text="城市配送"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:background="@mipmap/right_green"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/lines_data_car_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="川A3434r3"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_3333"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/lines_data_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="八家菜市场"
        android:textColor="@color/color_3333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lines_data_send_way"
        app:layout_constraintRight_toLeftOf="@id/lines_data_img1"
        android:layout_marginTop="@dimen/dp_13"
        android:gravity="right"
        android:paddingRight="@dimen/dp_8"
        />
    <ImageView
        android:id="@+id/lines_data_img1"
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_7"
        android:src="@mipmap/arrows_black"
        app:layout_constraintLeft_toRightOf="@id/lines_data_start"
        app:layout_constraintTop_toBottomOf="@id/lines_data_send_way"
        app:layout_constraintRight_toLeftOf="@id/lines_data_end"
        android:layout_marginTop="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/lines_data_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="成都青羊"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_3333"
        app:layout_constraintLeft_toRightOf="@id/lines_data_img1"
        app:layout_constraintTop_toBottomOf="@id/lines_data_send_way"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_13"
        android:paddingLeft="@dimen/dp_8"
        />
    <TextView
        android:id="@+id/lines_data_start_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="07:33"
        android:textColor="@color/color_3333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lines_data_start"
        app:layout_constraintRight_toLeftOf="@id/lines_data_times"
        android:gravity="right"
        android:paddingRight="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_5"
        />
    <TextView
        android:id="@+id/lines_data_times"
        android:layout_width="@dimen/dp_85"
        android:layout_height="wrap_content"
        android:text="(12天60时33分)"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_9999"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/lines_data_start_time"
        app:layout_constraintTop_toBottomOf="@id/lines_data_img1"
        app:layout_constraintRight_toLeftOf="@id/lines_data_end_time"
        />
    <TextView
        android:id="@+id/lines_data_end_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="13:00"
        android:textColor="@color/color_3333"
        android:textSize="@dimen/sp_14"
        android:paddingLeft="@dimen/dp_4"
        app:layout_constraintLeft_toRightOf="@id/lines_data_times"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lines_data_end"
        android:layout_marginTop="@dimen/dp_5"
        />
</android.support.constraint.ConstraintLayout>