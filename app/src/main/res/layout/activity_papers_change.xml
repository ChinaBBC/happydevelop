<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".driver.activity.PapersChangeActivity">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/papers_change_con1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_48"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/papers_change_back"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/papers_change_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="驾驶证"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_3333"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/papers_change_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="@color/color_3333"
            android:textSize="@dimen/sp_16"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/dp_12"
            />
    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/papers_change_con1"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/papers_change_con2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_15"
                >
                <ImageView
                    android:id="@+id/papers_change_one"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_180"
                    android:src="@mipmap/login_title_bg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="@dimen/dp_53"
                    android:layout_marginRight="@dimen/dp_53"
                    android:scaleType="fitXY"
                    android:background="@drawable/shape_5dp_3333"
                    />
                <TextView
                    android:id="@+id/papers_change_one_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_180"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="@dimen/dp_53"
                    android:layout_marginRight="@dimen/dp_53"
                    android:background="@drawable/shape_5dp_3333"
                    />
                <TextView
                    android:id="@+id/papers_change_one_word"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_40"
                    android:text="@string/re_upload"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/shape_5dp_3333"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/papers_change_con3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/papers_change_con2"
                android:layout_marginTop="@dimen/dp_15"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/papers_change_two"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_180"
                    android:src="@mipmap/login_title_bg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="@dimen/dp_53"
                    android:layout_marginRight="@dimen/dp_53"
                    android:scaleType="fitXY"
                    android:background="@drawable/shape_5dp_3333"
                    />
                <TextView
                    android:id="@+id/papers_change_two_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_180"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="@dimen/dp_53"
                    android:layout_marginRight="@dimen/dp_53"
                    android:background="@drawable/shape_5dp_3333"
                    />
                <TextView
                    android:id="@+id/papers_change_two_word"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_40"
                    android:text="@string/re_upload"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/shape_5dp_3333"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:id="@+id/papers_change_con4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/papers_change_con3"
                android:layout_marginTop="@dimen/dp_15"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/papers_change_three"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_180"
                    android:src="@mipmap/login_title_bg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="@dimen/dp_53"
                    android:layout_marginRight="@dimen/dp_53"
                    android:scaleType="fitXY"
                    android:background="@drawable/shape_5dp_3333"
                    />
                <TextView
                    android:id="@+id/papers_change_three_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_180"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="@dimen/dp_53"
                    android:layout_marginRight="@dimen/dp_53"
                    android:background="@drawable/shape_5dp_3333"
                    />
                <TextView
                    android:id="@+id/papers_change_three_word"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_40"
                    android:text="@string/re_upload"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/shape_5dp_3333"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </android.support.constraint.ConstraintLayout>
            <Button
                android:id="@+id/papers_change_save"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_44"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/shape_5dp_a45b"
                app:layout_constraintTop_toBottomOf="@id/papers_change_con4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/dp_43"
                android:layout_marginBottom="@dimen/dp_43"
                />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>